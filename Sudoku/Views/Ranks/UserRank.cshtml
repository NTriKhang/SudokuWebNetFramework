@model Sudoku.Models.Rank

@{
    Layout = "~/Views/Shared/_NoneLayoutPage.cshtml";
}
<style>
    a {
        text-decoration: none;
        color: black;
    }
</style>

<div class="row shadow p-3 mb-2 bg-white rounded" style="width:125%">
    <div class="col-1 d-flex align-items-center">
        <span>@Model.Value</span>
    </div>
    <div class="col-3">
        <img src="@Model.User.Profile_Image" style="width: -webkit-fill-available; height: 100%" />
    </div>
    <div class="col-7 ps-0">
        <span>@Model.User.First_name @Model.User.Last_name</span><br />
        <span class="text-muted">Solved @Model.SubmitCount problems</span>
    </div>
</div>
