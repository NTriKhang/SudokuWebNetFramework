@model Sudoku.Dtos.Incoming.ContestCreateDto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Contest</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mb-3", placeholder = "Room name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Point, new { htmlAttributes = new { @class = "form-control mb-3", placeholder = "Contest point" } })
                @Html.ValidationMessageFor(model => model.Point, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Level, null, htmlAttributes: new { @class = "form-control dropdown-toggle" })

            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="p-3">
                <button type="submit" class="btn btn-success p-2">Create</button>

                @Html.ActionLink("Go back", "Index", new { }, new { @class = "btn btn-secondary p-2" })
            </div>
        </div>
    </div>
}

